<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:contentDescription="scroll del coso"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textoNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/textoApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:hint="Apellido"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/textoNombreOriginal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:hint="Nombre original"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinnerEstado"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:contentDescription="estado" />

            <Spinner
                android:id="@+id/spinnerUnidad"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:contentDescription="unidad" />

            <Spinner
                android:id="@+id/spinnerGeneracion"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:contentDescription="generacion" />

            <EditText
                android:id="@+id/textoDebut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="date"
                android:minHeight="48dp"
                android:textColor="#000000"
                android:hint="Fecha de debut"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/botonCalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir calendario"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/textoAltura"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="number"
                android:hint="Altura"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/textoNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:hint="Nickname"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/textoDisenador"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="DiseÃ±ador"
                android:baselineAligned="false"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <Spinner
                android:id="@+id/spinnerMesCum"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:contentDescription="mes cum" />

            <Spinner
                android:id="@+id/spinnerDiaCum"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:contentDescription="dia cum" />

            <EditText
                android:id="@+id/textoBio"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:ems="10"
                android:hint="Bio"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#000000"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/imagenIdol"
                android:layout_width="match_parent"
                android:layout_height="412dp"
                app:srcCompat="@drawable/img_base" />

            <Button
                android:id="@+id/botonFoto"
                android:text="Subir imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <Button
                android:id="@+id/botonTerminarAdd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Agregar Idol"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>