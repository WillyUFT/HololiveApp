<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="900dp">
        <TextView
            android:id="@+id/editarConciertoEd"
            android:layout_width="407dp"
            android:layout_height="102dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/honey_notes"
            android:text="Editar concierto"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <EditText
            android:id="@+id/Nombre_ConciertoEd"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Nombre del concierto"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editarConciertoEd" />
        <Spinner
            android:id="@+id/spinnerIdolEd"
            android:layout_width="368dp"
            android:layout_height="60dp"
            android:contentDescription="spinner de la Idol que estará presente en el concierto"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="270dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Fecha_ConciertoEd"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/monserrat_light"
            android:hint="Fecha Actualización"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#000000"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="21dp"
            tools:layout_editor_absoluteY="370dp" />

        <EditText
            android:id="@+id/duracionEd"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:fontFamily="@font/monserrat_light"
            android:hint="Duración del concierto (en minutos)"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.338"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fecha_ConciertoEd"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/botonEditarConcierto"
            android:layout_width="389dp"
            android:layout_height="98dp"
            android:text="Editar concierto"
            android:textColor="#000000"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="623dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>